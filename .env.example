# ── Google Gemini ──────────────────────────────────────────────────────────────
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_OUTPUT_TOKENS=8192
GEMINI_TEMPERATURE=0.4

# ── Retry settings ─────────────────────────────────────────────────────────────
GEMINI_RETRY_ATTEMPTS=4
GEMINI_RETRY_MIN_WAIT=1.0
GEMINI_RETRY_MAX_WAIT=30.0

# ── Rate limiting ──────────────────────────────────────────────────────────────
RATE_LIMIT_PER_MINUTE=30

# ── App ─────────────────────────────────────────────────────────────────────────
APP_NAME=Mark – AI Campaign Generator
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ── Email / SendGrid ──────────────────────────────────────────────────────────
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=no-reply@yourdomain.com
EMAIL_REPLY_TO=                         # optional

# ── Email integration tests (opt-in only) ────────────────────────────────────
EMAIL_TEST_TO=you@yourdomain.com        # recipient for integration test emails
RUN_EMAIL_INTEGRATION_TESTS=           # set to 1 to run; leave blank in CI


# ── App ─────────────────────────────────────────────────────────────────────────
APP_NAME=Mark – AI Campaign Generator
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ── Hubspot ─────────────────────────────────────────────────────────────────────────
CLIENT_ID=your_hubspot_client_id_here
CLIENT_SECRET=your_hubspot_client_secret_here
PORT=3000
FRONTEND_URL=http://localhost:8080